<div class="monster-area">
    <div class="monster-container" id="{{type}}">
        <!-- Monster Image -->
        <div class="monster-image-container">
            <img class="monster-image" src="{{standee}}">
        </div>
        <!-- Monster Number -->
        <div class="monster-initiative-number">{{number}}</div>
        <!-- Monster HP -->
        <div class="monster-hp">
            <button class="plus-minus" id="plus">+</button>
            <div class="hp-value">{{hp}}</div>
            <button class="plus-minus" id="minus">-</button>
        </div>
    </div>
</div>